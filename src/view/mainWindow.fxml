<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane hgap="5.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="480.0" prefWidth="800.0" vgap="5.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MainWindowController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        <ColumnConstraints />
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints />
        <RowConstraints />
    </rowConstraints>
    <children>
        <BorderPane GridPane.columnIndex="0" GridPane.rowIndex="0">
            <top>
                <HBox spacing="10.0" BorderPane.alignment="CENTER">
                    <Label alignment="TOP_LEFT" minHeight="-Infinity" text="Customers">
                        <font>
                            <Font size="18.0" />
                        </font>
                    </Label>
                    <TextField fx:id="searchBar" alignment="TOP_RIGHT" minHeight="-Infinity" promptText="Search by Name or ID" />
                    <BorderPane.margin>
                        <Insets bottom="10.0" />
                    </BorderPane.margin>
                </HBox>
            </top>
            <center>

                <TableView fx:id="customerTable" BorderPane.alignment="CENTER">
                    <columns>
                        <TableColumn fx:id="customerIDCol" editable="false" maxWidth="75.0" prefWidth="35.0" text="ID" />
                        <TableColumn fx:id="nameCol" editable="false" minWidth="75.0" prefWidth="140.0" text="Name" />
                        <TableColumn fx:id="addressCol" editable="false" prefWidth="100.0" text="Address" />
                        <TableColumn fx:id="divisionCol" editable="false" prefWidth="75.0" text="State/Prov" />
                        <TableColumn fx:id="postalCol" editable="false" prefWidth="75.0" text="Postal" />
                        <TableColumn fx:id="countryCol" editable="false" prefWidth="75.0" text="Country" />
                        <TableColumn fx:id="phoneCol" editable="false" prefWidth="80.0" text="Phone" />
                    </columns>

                </TableView>
            </center>
        </BorderPane>

        <ButtonBar GridPane.columnIndex="0" GridPane.rowIndex="1">
            <buttons>
                <Button fx:id="newButton" minHeight="-Infinity" minWidth="-Infinity" onAction="#handleButtonClick" text="New..." />
                <Button fx:id="modifyButton" minHeight="-Infinity" minWidth="-Infinity" onAction="#handleButtonClick" text="Modify" />
                <Button fx:id="deleteButton" minHeight="-Infinity" minWidth="-Infinity" onAction="#handleButtonClick" text="Delete" />
            </buttons>
        </ButtonBar>


        <GridPane hgap="5.0" vgap="5.0" GridPane.columnIndex="1" GridPane.rowIndex="0">

        </GridPane>
        <ButtonBar prefHeight="40.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
            <buttons>
                <Button fx:id="addButton" minHeight="-Infinity" minWidth="-Infinity" onAction="#handleButtonClick" text="Add" />
            </buttons>
        </ButtonBar>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</GridPane>
