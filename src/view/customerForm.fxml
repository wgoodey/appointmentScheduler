<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane hgap="5.0" vgap="5.0" GridPane.columnIndex="2" GridPane.rowIndex="1" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.CustomerFormController">
<children>
    <Label text="Customer ID:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <TextField fx:id="customerID" disable="true" editable="false" maxWidth="50.0" GridPane.columnIndex="1" GridPane.rowIndex="0" />
    <Label text="Customer Name:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <TextField fx:id="name" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Label text="Country:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <ComboBox fx:id="country" GridPane.columnIndex="1" GridPane.rowIndex="2" />


    <Label text="Address:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <TextField fx:id="address" GridPane.columnIndex="1" GridPane.rowIndex="3" />
    <Label text="Postal Code:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
    <TextField fx:id="postalCode" GridPane.columnIndex="1" GridPane.rowIndex="4" />

    <Label text="State/Province:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
    <ComboBox fx:id="state_province" GridPane.columnIndex="1" GridPane.rowIndex="5" />

    <Label text="Phone:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
    <TextField fx:id="phone" GridPane.columnIndex="1" GridPane.rowIndex="6" />
    <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="7" />
    <TextField fx:id="email" GridPane.columnIndex="1" GridPane.rowIndex="7" />


    <Label text="Contact:" GridPane.columnIndex="0" GridPane.rowIndex="10" />
    <ComboBox fx:id="customerContact" GridPane.columnIndex="1" GridPane.rowIndex="10" />

    <ButtonBar prefHeight="40.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="15">
        <buttons>
            <Button fx:id="addButton" minHeight="-Infinity" minWidth="-Infinity" onAction="#save" text="Save" />
            <Button fx:id="cancelButton" minHeight="-Infinity" minWidth="-Infinity" onAction="#cancel" text="Cancel" />
        </buttons>
    </ButtonBar>
</children>
<columnConstraints>
    <ColumnConstraints />
    <ColumnConstraints />
</columnConstraints>
<rowConstraints>
    <RowConstraints />
    <RowConstraints />
    <RowConstraints />
    <RowConstraints />
    <RowConstraints />
    <RowConstraints />
    <RowConstraints />
    <RowConstraints />
    <RowConstraints />
    <RowConstraints />
    <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
</rowConstraints>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</GridPane>
