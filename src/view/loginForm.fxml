<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="250" prefWidth="400" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LoginFormController">
   <top>
      <Label fx:id="badLoginLabel" opacity="0.00" text="Login failed.&#10;Check credentials and try again." textAlignment="CENTER" textFill="#ca0000" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin></Label>
   </top>
   <center>
      <GridPane alignment="CENTER" hgap="5.0" layoutX="100.0" vgap="5.0">
         <children>
            <Label fx:id="usernameLabel" text="Username:" />
            <Label fx:id="passwordLabel" text="Password:" GridPane.rowIndex="1" />
            <TextField fx:id="usernameField" GridPane.columnIndex="1" />
            <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Button fx:id="loginButton" defaultButton="true" mnemonicParsing="false" onAction="#login" text="Login" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="2">
               <GridPane.margin>
                  <Insets top="5.0" />
               </GridPane.margin></Button>
         </children>
      </GridPane>
   </center>
   <bottom>
      <Label fx:id="regionLabel" textFill="#00277c" BorderPane.alignment="BOTTOM_RIGHT">
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin></Label>
   </bottom>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>

</BorderPane>
